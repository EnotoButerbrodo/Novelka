<UserControl x:Class="NovelkaControlLib.SlideTextBoxControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NovelkaControlLib"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             DataContext="{RelativeSource Mode=Self}"
             >
    <Grid>
       <DockPanel>
            <TextBox Name="SpeakerTextBox"
                     Text=""
                     DockPanel.Dock="Top"
                     HorizontalAlignment="Left"
                     Width="{Binding SpeakerWidth}"
                     />
            
            <TextBox Name="TextTextBox"
                 Text=""
                 Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2"
                 
                 />
        </DockPanel>

    </Grid>
</UserControl>
